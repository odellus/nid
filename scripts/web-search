#!/usr/bin/env python3
"""Poor man's web search using SearXNG"""
import sys
import json
import urllib.request
import urllib.parse

def search(query: str, num_results: int = 5):
    """Search and display results"""
    encoded = urllib.parse.quote(query)
    url = f"http://localhost:8082/search?q={encoded}&format=json"
    
    with urllib.request.urlopen(url) as response:
        data = json.loads(response.read())
    
    results = data.get("results", [])[:num_results]
    
    for i, r in enumerate(results, 1):
        print(f"\n{i}. {r['title']}")
        print(f"   URL: {r['url']}")
        print(f"   {r['content'][:200]}...")

if __name__ == "__main__":
    if len(sys.argv) < 2:
        print("Usage: web-search 'query' [num_results]")
        sys.exit(1)
    
    query = sys.argv[1]
    num = int(sys.argv[2]) if len(sys.argv) > 2 else 5
    search(query, num)
